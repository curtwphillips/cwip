{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./",
    "outDir": "build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": ["*/**.ts", "index.ts", "server/envConfig.js", "server/app.js"],
  "exclude": ["**/ui", "**/node_modules", "**/build", "**/dist"]
}
