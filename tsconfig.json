{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "baseUrl": "./",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": [
    "*/**.ts",
    "index.ts",
    "server/envConfig.js",
    "server/app.js",
    "lib/arrays/arrays.ts",
    "lib/objects"
  ],
  "exclude": ["**/ui", "**/node_modules", "**/build", "**/dist"]
}
